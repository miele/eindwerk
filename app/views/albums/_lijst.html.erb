
	<h2>Albums</h2>
	<%= link_to("Add New Album", {:action => 'new'}, :class => 'action_new') %>
	<table class="listing" summary="Subject list">
	<tr class="header">
		<th><%= sortable "name" %></th>
		<th>Actions</th>
	</tr>
	<% @albums.each do |album| %>
	<tr>
	
		<td><%= album.name %>&nbsp;</td>
		<td class="actions">
		<%= link_to("Show", {:action => 'show', :id => album.id}, :class => 'action show')%>
		<%= link_to("Edit", {:action => 'edit', :id => album.id}, :class => 'edit')%>
		<%= link_to("Delete",{:action => 'delete' , :id => album.id}, :class => 'action delete')%>
		</td>
	</tr>
	<% end %>
	</table>
	<%= will_paginate @albums %>