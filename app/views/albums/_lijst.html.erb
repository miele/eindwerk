
	<%= link_to("Add New Album", {:action => 'new'}, :class => 'textlink') %>
	<div class="hr dotted clearfix">&nbsp;</div>
	<table class="listing" summary="Subject list">
	<tr class="header">
		<th><%= sortable "name" %></th>
		<th>Actions<div class="hr dotted clearfix">&nbsp;</div></th>
	</tr>
	<% @albums.each do |album| %>
	<tr>
	
		<td><%= album.name %>&nbsp;</td>
		<td class="actions">
		<%= link_to("Show", {:action => 'show', :id => album.id}, :class => 'textlink')%>
		<%= link_to("Edit", {:action => 'edit', :id => album.id}, :class => 'textlink')%>
		<%= link_to("Delete",{:action => 'delete' , :id => album.id}, :class => 'textlink')%>
		<div class="hr dotted clearfix">&nbsp;</div>
		</td>
	</tr>
	<% end %>
	</table>
	<%= will_paginate @albums %>