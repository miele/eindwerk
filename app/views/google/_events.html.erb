<table class="normal tablesorter fullwidth">
						<thead>
							<tr>
								
								<th>Datum</th>
								<th>Tijdstip</th>
								<th>Naam</th>
								<th>Actions</th>
							</tr>
						</thead>
	<tbody>
	
<%= link_to("Add New Event", {:action => 'new'}, :class => 'button_link') %>
<div>&nbsp;</div>
<% @events.sort{|a,b| b.start_time <=> a.start_time}.each do |event| %>

								<tr class="odd">
								
								<td><%= event.start_time.strftime("%m/%d/%Y") %></td>
								<td><%= event.start_time.strftime("%I:%M %p") %> - <%= event.end_time.strftime("%I:%M %p") %></td>
								<td><%= event.title %></td>
								<td><%= link_to(image_tag('/stylesheets/backend/assets/icons/actions_small/preferences.png'), {:action => :view, :event_id => event.id},{:title => 'Show ' + event.title ,:class => "tooltip table_icon"}) -%>
								
								<%= link_to(image_tag('/stylesheets/backend/assets/icons/actions_small/trash.png'), {:action => :delete_event, :event_id => event.id},{:title => 'Delete ' + event.title ,:class => "tooltip table_icon"}, :confirm => 'Are you sure you want to delete this event?') -%></td>

							</tr>
	
	
	
	<% end %>
	</tbody>
	</table>
