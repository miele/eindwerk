<ul>
<% @events.sort{|a,b| b.start_time <=> a.start_time}.each do |event| %>
	<li><strong><%= event.start_time.strftime("%m/%d/%Y") %></strong>
		<% if event.all_day %>
			All Day
		<% else %>
			<%= event.start_time.strftime("%I:%M %p") %> - <%= event.end_time.strftime("%I:%M %p") %>
		<% end %>
		 <%= link_to event.title, :action => :view, :event_id => event.id %>
		(<%= link_to 'X', {:action => :delete_event, :event_id => event.id}, :confirm => 'Are you sure you want to delete this event?' %>)
	</li>
<% end %>
</ul>