	<%= link_to("Add New Member", {:action => 'new'}, :class => 'textlink') %>
	<div class="hr dotted clearfix">&nbsp;</div>

	<table class="listing" summary="Subject list">
	<tr class="header">
		<th><%= sortable "name" %></th>
		<th><%= sortable "birthday" %></th>
		<th>Content&nbsp;</th>
		<th>&nbsp;Instrument&nbsp;</th>
		<th>Actions<div class="hr dotted clearfix">&nbsp;</div></th>
	</tr>
	<% @bands.each do |band| %>
	<tr>
		<td><%= band.name %>&nbsp;</td>
		<td><%= band.birthday %>&nbsp;</td>
		<td >&nbsp;<%= band.content %>&nbsp;</td>
		<td >&nbsp;<%= band.instrument %>&nbsp;</td>
		<td class="actions">
		<%= link_to("Show", {:action => 'show', :id => band.id}, :class => 'textlink')%>
		<%= link_to("Edit", {:action => 'edit', :id => band.id}, :class => 'textlink')%>
		<%= link_to("Delete",{:action => 'delete' , :id => band.id}, :class => 'textlink')%>
		<div class="hr dotted clearfix">&nbsp;</div>
		</td>
	</tr>
	<% end %>
	</table>
	<%= will_paginate @bands %>