
<fieldset>
						<legend>Tha Band</legend>
			<p>
			<label for="name">Name</label>
			<%= f.text_field :name,{:id => "name",:class=> "required",:minlength => "2"}%>
			</p>
		
			<p>
			<label for="birthday">Birthday</label>
			<%= f.text_field :birthday,{:id => "birthday",:class=> "required"}%>
			</p>
			
			<p>
			<label for="instrument">Instrument</label>
			<%= f.text_field(:instrument,{:id => "instrument",:class=> "required",:minlength => "3"})%>
			</p>
			
			<p>
			<label for="band_picture">Photo</label>
			<%= f.file_field :picture,{:class => "styled_upload"} %>
			</p>
			
			<p>
			<label for="band_content">Content</label>
			<%= f.text_area(:content,{:class => "editor required"})%>
			</p>

<% content_for :head do %>
  <script type="text/javascript">
    $(function() {
      $('#band').addClass('current').html("<a><span>The Band</span></a>");
    });
  </script>
<% end %>