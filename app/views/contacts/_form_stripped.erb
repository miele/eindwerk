<%= form_for(@contact ,:html => { :id => "contact_form_id" }) do |f| %>

<%= render "shared/error_messages" , :target => @contact %>
<%= image_tag('contact_box.png', :id => 'contact_image') %>
<fieldset>
	<h2>Book the Skarminkels!</h2>
	
  
	<label for="name">Name</label>
    <%= f.text_field :name,{:id => "name",:class=> "required"} %>

	
	<p>
	<label for="email">Email</label>
    <%= f.text_field :email,{:id => "email",:class=> "required email"} %>
  	</p>
  	<p>
	<label for="info">Additionel Information</label>
    <%= f.text_area(:info,{:class => "editor",:class=> "required"}) %>
  	</p>
	
  	<p>
	<label for="phone">Phone</label>
    <%= f.text_field :tel ,{:id => "phone",:class=> "required"}%>
  	</p>
  	</fieldset>
  	
  		<p>
    <%= f.submit "Book Us!" ,:class => "sendButton"%>
 	</p>

<% end %>
