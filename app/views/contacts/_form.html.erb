<%= form_for(@contact ,:html => { :id => "contact_form_id" }) do |f| %>
<%= render "shared/error_messages" , :target => @contact %>
<ul>
  	<li class="clearfix">
	<label for="name">Name</label>
    <%= f.text_field :name,{:id => "name"} %>
  	<div class="clear"></div>
	</li>
	
	<li class="clearfix">
	<label for="name">Email</label>
    <%= f.text_field :email,{:id => "name"} %>
  	<div class="clear"></div>
	</li>
	
  	<li class="clearfix">
	<label for="name">Info</label>
    <%= f.text_area :info %>
  	<div class="clear"></div>
	</li>
	
  	<li class="clearfix">
	<label for="name">Phone</label>
    <%= f.text_field :tel ,{:id => "name"}%>
  	<div class="clear"></div>
	</li>
	
  	<li class="clearfix">
    <%= f.submit "Submit" ,:class => "sendButton"%>
 	<div class="clear"></div>
	</li>
	
</ul>
<% end %>
