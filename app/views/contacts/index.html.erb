<div class ="inner">
<p><%= image_tag('/stylesheets/backend/assets/icons/big_icons/booking.png') %>
<%= image_tag('/stylesheets/backend/assets/icons/big_icons/booking_title.png',:id => 'big_title') %>
</p>
<% if flash[:notice] %>
<div class="notification success"> 
<span></span> 
<div class="text"> 
<p><strong><%= flash[:notice] %></strong>.</p> 
</div> 
</div> 
  <% end %>


	<table class="normal tablesorter fullwidth">
						<thead>
							<tr>
								
								<th>Name</th>
								<th>Email</th>
								<th>Info</th>
								<th>&nbsp;Telefoon</th>
								<th>Actions</th>
							</tr>
						</thead>
	<tbody>
<% @contacts.each do |contact| %>
  	<tr class="odd">
								
								<td><%= contact.name %>&nbsp;</td>
								<td><%= contact.email %>&nbsp;</td>
								<td><%= contact.info %>&nbsp;</td>
								<td><%= contact.tel %></td>
								<td>
								<%= link_to(image_tag('/stylesheets/backend/assets/icons/actions_small/preferences.png'),{:action => 'show', :id => contact.id}, {:title => 'Show ' + contact.name ,:class => "tooltip table_icon"}) %>
								<%= link_to(image_tag('/stylesheets/backend/assets/icons/actions_small/pencil.png'),{:action => 'edit', :id => contact.id}, {:title => 'Edit ' + contact.name ,:class => "tooltip table_icon"}) %>
								<%= link_to(image_tag('/stylesheets/backend/assets/icons/actions_small/trash.png'),{:action => 'delete', :id => contact.id}, {:title => 'Delete ' + contact.name ,:class => "tooltip table_icon"}) %>	
								</td>
							</tr>
	
	
	
	<% end %>
	</tbody>
	</table>

<br />
<%= will_paginate @contacts %>

</div>

<% content_for :head do %>
  <script type="text/javascript">
    $(function() {
      $('#booking').addClass('current').html("<a><span>Bookings</span></a>");
    });
  </script>
<% end %>
