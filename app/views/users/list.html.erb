<%= @page_title = "User List" %>
<div class="User list">
	<h2>Users</h2>
	<%= link_to("Add New User", {:action => 'new'}, :class => 'action_new') %>
	<table class="listing" summary="User list">
	<tr class="header">
		<th>&nbsp;</th>
		<th>Email</th>
		<th>Password</th>
		<th>Password Salt</th>
	</tr>
	<% @users.each do |user| %>
	<tr>
		<td><%= user.email %></td>
		<td><%= user.encrypted_password %></td>
		<td><%= user.password_salt %></td>
		<td class="actions">
		<%= link_to("Show", {:action => 'show', :id => user.id}, :class => 'action show')%>
		<%= link_to("Edit", {:action => 'edit', :id => user.id}, :class => 'action edit')%>
		<%= link_to("Delete",{:action => 'delete' , :id => user.id}, :class => 'action delete')%>
		</td>
	</tr>
	<% end %>
	</table>
</div>