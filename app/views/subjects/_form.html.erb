<%= render "shared/error_messages" , :target => @subject %>
<fieldset>
						<legend>News</legend>
						
						<p>
						<label>Name:</label>
						<%= f.text_field(:name,{:class=> "required",:minlength => "5"})%>
						</p>
						<!--
<p>
						<label>Position:</label>
						<% f.text_field(:position,{:class=> "required digits",:minlength => "1"})%>
						</p>
						<p>
						<label>Visible:</label>
						<% f.text_field(:visible,{:class=> "required",:minlength => "5"})%>
						</p>
-->
					
						<p>
						<label>Photo</label>
						<% link_to image_tag('fancy_nav_left.png', {:alt => 'Rotate Clockwise'}), :action => 'rotate', :id => 								@subject.id, :deg => '-90' %>
						<% link_to image_tag('fancy_nav_right.png', {:alt => 'Rotate Clockwise'}), :action => 'rotate', :id => 								@subject.id, :deg => '90' %>
						<%= f.file_field(:photo,{:class => "styled_upload"})%>
						</p>
						
						<p>
						<label>Content</label><br/>
						<%= f.text_area(:content,{:class => "editor"})%>
						</p>

<% content_for :head do %>
  <script type="text/javascript">
    $(function() {
      $('#news').addClass('current').html("<a><span>News</span></a>");
    });
  </script>
<% end %>
						
						