			</aside>

			<div class="hr grid_12 clearfix boxhr">&nbsp;</div>
			<!-- =Slider -->
			<section id="featured" class="clearfix grid_12">
			<div class="coin-slider" id="coin-slider-coin-slider">
				<div id="coin-slider">
				 <% @subjects.each do |subject| %>
					<article>
						<a href="/Subjects/show/<%= subject.id %>" target="_self">
							<%= image_tag(subject.photo.url(:large)) %>
							<span><%= subject.name %></span>
						</a>
					</article>
					<% end %>
				</div><!-- coin-slider -->
				</div>
	
			</section><!-- #featured/slider -->
			
				<!-- =BOXES RECENT ENTRIES -->
			<section class="box_entries grid_12">
			
				<!-- FIRST ROW -->
				<header><h4 class="box_title">RECENT NEWS</h4></header>
        

   <% @subjects.each do |subject| %>
   
   <article>
					<a class="boxgrid box alpha tl tooltip" href="/Subjects/show/<%= subject.id %>" title="<%= subject.name %>">
						<h4 class="title nocufon"><%= subject.name %></h4>
						<p class"sub"><%= subject.content %></p>
						<figure><%= image_tag(subject.photo.url(:thumb)) %></figure>
					</a>
				</article>
    <% end %>
   <% @tweets.each do |tweet| %>
   <article>
					<a class="boxgrid box alpha tl tooltip" href="#" title="tweet">
						<h4 class="title nocufon"><%= tweet.id %></h4>
						<p><%= tweet.content %></p>
					</a>
				</article>
   
   <% end %>
