
	<h2>Subjects</h2>
	<%= link_to("Add New Subject", {:action => 'new'}, :class => 'action_new') %>
	<table class="listing" summary="Subject list">
	<tr class="header">
		<th>&nbsp;</th>
		<th><%= sortable "name" %></th>
		<th><%= sortable "visible" %></th>
		<th>&nbsp;Pages</th>
		<th>Actions</th>
	</tr>
	<% @subjects.each do |subject| %>
	<tr>
		<td><%= subject.position %>&nbsp;</td>
		<td><%= subject.name %>&nbsp;</td>
		<td class="center"><%= subject.visible ? 'Yes' : 'No' %>&nbsp;</td>
		<td class="center">&nbsp;<%= subject.pages.size %></td>
		<td class="actions">
		<%= link_to("Show", {:action => 'show', :id => subject.id}, :class => 'action show')%>
		<%= link_to("Edit", {:action => 'edit', :id => subject.id}, :class => 'edit')%>
		<%= link_to("Delete",{:action => 'delete' , :id => subject.id}, :class => 'action delete')%>
		</td>
	</tr>
	<% end %>
	</table>
	<%= will_paginate @subjects %>