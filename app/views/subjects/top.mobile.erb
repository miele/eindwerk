<div data-role="header">
  <h1>Index Page</h1>
</div>

<div class="coin-slider" id="coin-slider-coin-slider">
				<div id="coin-slider">
				
				 <% @subjects.each do |subject| %>
				 
					<article>
						<a href="/Subjects/show/<%= subject.id %>" target="_self">
							<%= image_tag(subject.photo.url(:medium)) %>
