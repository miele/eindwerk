<html lang="en">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Admin Area<%= @page_title || 'Admin_Area' %></title>
    <meta name="author" content="Miele">
     <%= stylesheet_link_tag('public','admin',:media => 'all') %>
  </head>
  <body>
    <div id="header">
      <h1>De header</h1>
    </div>
    <div id="main">
      <% if !flash[:notice].blank? %>
      <div class="notice">
        <%= flash[:notice] %>
      </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
     <p>hier komt de footer</p>
    </div>
  </body>
</html>
